<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EnjoyTravelBike" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- All customizations that are NOT specific end a particular API-level can go here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="main_menu_text_active">
        <item name="android:textColor">@color/main_menu_text_active</item>
        <item name="android:textSize">@dimen/main_menu_text_size</item>
    </style>

    <style name="main_menu_text_inactive">
        <item name="android:textColor">@color/main_menu_text_inactive</item>
        <item name="android:textSize">@dimen/main_menu_text_size</item>
    </style>

    <style name="filter_battery_checkbox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/selector_filter_battery</item>
    </style>

    <style name="filter_switch_map_checkbox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/selector_switch_map</item>
    </style>

    <style name="filter_car_capacity_checkbox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/selector_car_capacity</item>
    </style>

    <style name="filter_location_reset_checkbox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/selector_location_reset</item>
    </style>

    <style name="flash_checkbox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/selector_flash</item>
    </style>

    <style name="flash_checkbox_rectangle" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/selector_flash_rectangle</item>
    </style>

    <style name="car_type_item_style" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_car_type_item</item>
        <item name="android:textColor">@drawable/selector_car_type_item_color</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="paddingStart">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="paddingEnd">20dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:button">@null</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="item_pop_bike_status_style" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_car_type_item</item>
        <item name="android:textColor">@drawable/selector_car_type_item_color</item>
        <item name="android:button">@null</item>
    </style>

    <style name="scanner_radio_style">
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/selector_scanner_radio_text_color</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="site_edit_radio_style">
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/selector_scanner_radio_text_color</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="home_bottom_bar_image_style">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="bike_detail_text_pre_style">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#B9B9B9</item>
    </style>

    <style name="bike_detail_text_value_style">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/default_black_color</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="bike_detail_control_textview_style">
        <item name="android:layout_width">75dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/default_black_color</item>
        <item name="background">@drawable/selector_bike_detail_control_bg</item>
    </style>

    <style name="item_drop_down_common_style" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:gravity">center</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@drawable/selector_car_type_item_color</item>
        <item name="background">@drawable/select_filter_item</item>
        <item name="android:button">@null</item>
    </style>

    <style name="pop_bike_status_edit_style">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textColor">@color/default_black_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/shape_rectangle_gray_content_radius_20dp</item>
    </style>

    <style name="item_history_order_record_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#B9B9B9</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="bike_repair_checkbox_style" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@drawable/selector_bike_repair_checkbox_text_color</item>
        <item name="android:button">@null</item>
    </style>

    <style name="service_select_checkbox_style" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">@drawable/selector_bike_repair_checkbox_text_color</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
    </style>
</resources>